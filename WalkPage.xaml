                       x:Name="Kaban"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                <Label Text="Соболь:"
                       x:Name="Sobol"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                <Label Text="Рысь:"
                       x:Name="Ris"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                
            </StackLayout>
            <Button x:Name="RecordButton" Text="Начать запись" FontSize="24" HorizontalOptions="FillAndExpand" Clicked="Record_Clicked" />
            <Button x:Name="PlayButton" Text="Проанализировать" FontSize="24" HorizontalOptions="FillAndExpand"  IsEnabled="False"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>