                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            
                <Label Text="Кабарга:"
                       x:Name="Kabarga"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                <Label Text="Колонок:"
                       x:Name="Kolonok"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                
                <Label Text="Корсак:"
                       x:Name="Korsak"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                <Label Text="Куницы:"
                       x:Name="Kunic"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                <Label Text="Косули:"
                       x:Name="Kosuli"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
                <Label Text="Лисица:"
                       x:Name="Lisica"
                    FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
