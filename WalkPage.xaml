            <Label          
                Text="Следы животных"
                   FontSize="Medium"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout
                Padding="30"
                Spacing="0">
                
            <Label Text="Белка:"
